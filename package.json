{
  "name": "london-move-api",
  "version": "1.0.0",
  "description": "Lightning-fast cache-only Rentman API backend optimized for Framer frontend",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "test": "bun test",
    "clean": "rm -rf dist node_modules/.cache"
  },
  "keywords": [
    "rentman",
    "api",
    "cache",
    "hono",
    "bun",
    "typescript",
    "real-estate",
    "framer"
  ],
  "author": "London Move",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.35.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.1",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.6",
    "ioredis": "^5.7.0",
    "pino": "^9.9.4",
    "postgres": "^3.4.7",
    "sharp": "^0.34.3",
    "zod": "^4.1.5"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=20.0.0"
  }
}
